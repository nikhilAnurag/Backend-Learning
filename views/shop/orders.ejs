<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (orders.length > 0) { %>
            <ul>
                <% orders.forEach(order => { 
                    order.products.forEach(p=>{%>

                        <li> <%= p.product.title  %> ( <%= p.quantity %> )</li>
                    
                    <% })
                 }); %>
            </ul>
        <% } else { %>
            <p>No orders found.</p>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>
</body>
